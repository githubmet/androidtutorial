<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/editTextNameP028"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPasswordP028"
        android:layout_below="@+id/editTextNameP028"
        android:layout_alignLeft="@+id/editTextNameP028"
        android:layout_alignStart="@+id/editTextNameP028"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSaveP028"
        android:layout_below="@+id/editTextPasswordP028"
        android:layout_alignLeft="@+id/editTextPasswordP028"
        android:layout_alignStart="@+id/editTextPasswordP028"
        android:onClick="onClickSaveMtdP028" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to new Activity"
        android:id="@+id/buttonNewActivityP028"
        android:layout_alignBottom="@+id/buttonSaveP028"
        android:layout_toRightOf="@+id/buttonSaveP028"
        android:layout_toEndOf="@+id/buttonSaveP028"
        android:onClick="onClickNextMtdP028"/>


</RelativeLayout>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="CenterStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#006699</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Tum veriler values/style/.xml dosyasindan gelir</item>
    </style>
    <color name="specialColor">#b0c4de</color>
    <style name="Theme.AppCompat.Dialog.themeDeneme">
        <item name="android:windowBackground">@color/specialColor</item>
    </style>


    <style name="BabyBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#efefef</item>
        <item name="android:background">#006699</item>
    </style>
    <style name="BabyBlue.BigBlue">  <!--bu iki style sadece style da kalitimin nasil yapildiginin bir gostergesidir -->
        <item name="android:textSize">30sp</item>
    </style>


</resources>
